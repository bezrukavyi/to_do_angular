%ui-view.view-slide-in{ layout: 'row' }

%md-content{ flex: '', layout: 'column', layout_align: 'center center', ng_if: '!projects.currentProject' }
  %h1 Choose project or create new
  %div{ layout: 'row', layout_align: 'center' }
    %md-button.md-raised.md-primary{ 'ng-click': 'projects.create()' } New Project


%md-content{ flex: '', ng_if: 'projects.currentProject' }

  %form#project-form{ layout: 'column', layout_align: 'center center', name: 'editProjectForm' }
    %md-input-container.md-block.project-title{ 'ng-class': "{ 'read-field': !editProjectForm.edited }" }
      %textarea#title-field.title{ 'aria-label': 'Title', 'md-maxlength': '50', 'md-no-asterisk': '', required: '', name: 'title', ng_model: 'projects.currentProject.title' }
      %span.hidden {{ projects.currentProject.title }}
      %div.validators{ ng_messages: 'editProjectForm.title.$error' }
        %div{ ng_message: 'required' } This is required.
        %div{ ng_message: 'md-maxlength' } The title must be less than 50 characters long.

    %md-actions.project-actions{ layout: 'row', layout_align: 'center' }
      %md-button#edit-project.md-ink-ripple.md-icon-button.md-24
        %md-icon{ 'ng-click': 'projects.edit(editProjectForm, projects.currentProject)' } edit
      %md-button#delete-project.md-button.md-ink-ripple.md-icon-button.md-24
        %md-icon{ 'ng-click': 'projects.delete(projects.currentProject)' } delete
      %md-datepicker#deadline-project.project-datepicker{ 'md-min-date': 'projects.minDate', name: 'completed_at', ng_model: 'projects.currentProject.completed_at', 'ng-change': 'projects.update(editProjectForm, projects.currentProject)' }

    .date-title {{ projects.currentProject.completed_at | date: 'dd/MM/yy' }}

  .tasks-content{ layout: 'column', layout_align: 'center center', ng_controller: 'TasksController as tasks' }
    %tasks_create{ ctrl: 'tasks', project: 'projects.currentProject' }

    .todo-list
      %md-card.todo-item-wrap{ 'ng-repeat': 'task in projects.currentProject.tasks' }
        %tasks_item{ ctrl: 'tasks', task: 'task', project: 'projects.currentProject' }
