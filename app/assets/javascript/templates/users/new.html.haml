%form{ name: 'userForm', 'ng-submit': 'user.create(userForm)', role: 'form' }
  .form-group
    %label{ for: 'email' } Email
    %input#email.form-control{ name: 'email', 'ng-model': 'user.new.email', required: 'required', type: 'email' }
  .form-group
    %label{ for: 'password' } Password
    %input#password.form-control{ name: 'password', 'ng-model': 'user.new.password', required: 'required', type: 'password' }
  .form-group
    %label{ for: 'password_confirmation' } Password confirmation
    %input#password_confirmation.form-control{ name: 'password_confirmation', 'ng-model': 'user.new.password_confirmation', required: 'required', type: 'password' }
  %button.btn.btn-primary.btn-lg{ type: 'submit' } Register
